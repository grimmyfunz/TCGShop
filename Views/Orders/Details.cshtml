@model TCGShop.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID_DeliveryType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_DeliveryType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_User)
        </dd>
    </dl>
</div>

<div class="row mt-5 mb-2">
    @{
        float total = 0;

        foreach (Product item in (IEnumerable<Product>)ViewData["PIL"])
        {
            total += item.Price;

            <div class="col-lg-4">
                <img class="img-thumbnail" src="@item.Img" alt="@item.Title" />
                <h2>@item.Title</h2>
                <p>Price: @item.Price.ToString("c")</p>
            </div>
        }
    }
</div>

<h2>Total price: @total</h2>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID"><button type="button" class="btn btn-secondary">Edit</button></a> |
    <a asp-action="Index"><button type="button" class="btn btn-secondary">Back to list</button></a>
</div>
